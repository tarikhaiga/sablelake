---
const {title, description, imageSrc, link}= Astro.props
---

<a class="group rounded-xl overflow-hidden" href={link}>
  <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
    <img class="w-full h-full absolute top-0 left-0 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out rounded-xl" src={imageSrc} alt="Image Description">
  </div>

  <div class="mt-7">
    <h3 class="text-xl font-semibold">
      {title}
    </h3>
    <p class="mt-3">
      {description}
    </p>
    <p class="mt-5 inline-flex items-center gap-x-1.5 text-blue-600 decoration-2 group-hover:underline font-medium">
      Read more
      <svg class="w-2.5 h-2.5" width="16" height="16" viewBox="0 0 16 16" fill="none">
        <path d="M5.27921 2L10.9257 7.64645C11.1209 7.84171 11.1209 8.15829 10.9257 8.35355L5.27921 14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </p>
  </div>
</a>