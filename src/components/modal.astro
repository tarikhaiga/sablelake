---
const { id, title, description } = Astro.props;
---

<div id={id} class="hs-overlay hidden fixed inset-0 z-[80] flex items-center justify-center overflow-x-hidden overflow-y-auto pointer-events-none">
  <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-[600px] sm:w-full m-3 sm:mx-auto max-h-[calc(100%-3.5rem)] min-h-[calc(100%-3.5rem)] flex items-center">
    <div class="w-full max-h-full overflow-hidden flex flex-col  bg-gradient-to-r from-hunter-green-100 to-hunter-green-50 border shadow-sm pointer-events-auto">
      <div class="flex justify-between items-center py-3 px-4 pb-0">
        <button type="button" class="ml-auto mt-4 flex justify-center items-center size-7 text-sm font-epilogue border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay={`#${id}`}>
          <span class="sr-only">Close</span>
          <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
      <div class="px-4 pb-4 pt-0 overflow-y-auto">
        <div class="space-y-4">
          <h3 class="font-bold text-gray-800 text-2xl font-epilogue">
            {title}
          </h3>
          <div>
            <p class="mt-1 text-gray-800 text-lg font-epilogue">
              {description}
            </p>
          </div>
        </div>
      </div>
      <div class="flex justify-center items-center gap-x-2 py-3 px-4">
        <button type="button" class="mx-auto py-2 px-4 inline-flex items-center gap-x-2 text-md font-epilogue border border-hunter-green-500 text-hunter-green-600 bg-transparent hover:bg-hunter-green-900  hover:text-hunter-green-50" data-hs-overlay={`#${id}`}>
          Close
        </button>
      </div>
    </div>
  </div>
</div>