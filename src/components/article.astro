---
// Import necessary components
import Footer from "./Footer.astro";
import Navbar from "./Navbar.astro";

// Props coming from the parent component or page
interface ArticleProps {
  title: string;
  subtitle: string;
  imageUrl: string;
  imageAlt: string;
  content: string;
}

const { title, subtitle, imageUrl, imageAlt, content } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body class="bg-hunter-green-900">
  <Navbar />
  <!-- Blog Article -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-4xl font-epilogue text-hunter-green-50 mb-2">{title}</h1>
    <h2 class="text-lg text-gray-700 mb-4">{subtitle}</h2>
    <figure class="mb-4">
      <img src={imageUrl} alt={imageAlt} class="w-full">
      <figcaption class="text-center mt-3 text-sm text-hunter-green-50 font-epilogue">{imageAlt}</figcaption>
    </figure>
    <div class="text-lg text-hunter-green-50 font-epilogue" set:html={content}></div>
    </div>
  <Footer />
</body>
</html>